{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "./config/*.yaml",
        "outDir": "./dist"
      },
      {
        "include": "./public/**/*",
        "outDir": "./dist"
      },
      {
        "include": "./views/**/*.hbs",
        "outDir": "./dist"
      }
    ],
    "watchAssets": true
  }
}
 